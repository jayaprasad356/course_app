<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ReferEarnActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@color/primary_color">
        >


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/ic_arrow_back"
            android:backgroundTint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            />


        <TextView
            android:layout_toRightOf="@+id/iv_back"
            android:id="@+id/tv_refer_earn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer &amp; Earn"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            />


    </RelativeLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop" />







        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/sky_blue"
            app:cardCornerRadius="@dimen/_12sdp"
            >

            <ImageView
                android:layout_gravity="right|bottom"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:background="@drawable/card_bg_shadow"
                />
            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/card_bg"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/gift_img"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Invite your friends\nearn rewards!"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/tvCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/opensans"
                    android:gravity="center_horizontal"
                    android:text="ABC123"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/yellow_light"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_5sdp"
                    android:text="Share this code with your friends to earn rewards!"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>






        </com.google.android.material.card.MaterialCardView>















    <Button
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:paddingVertical="@dimen/_16sdp"
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share with Friends"
        android:textColor="@android:color/white"
        android:fontFamily="@font/opensans"
        android:textAllCaps="false"
        android:layout_marginTop="14dp" />



</RelativeLayout>